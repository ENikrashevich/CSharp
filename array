public class array_methods
{

    public void print_array(int n, int[] a)
    {
        Console.WriteLine("Длина массива " + n);
        Console.Write("Массив ");
        for (int i = 0;i<n;i++)
        {
            Console.Write(a[i] + " ");
        }
        Console.WriteLine();
    }

    public int sum_array(int n, int[] a)
    {
        int count = 0;
        for(int i = 0; i < n; i++)
        {
            count+= a[i];   
        }
        return count;
    }

    public int mid_num(int n, int[] a)
    {
        int res = sum_array(n, a);
        return res / n;
    }

    public int max_num(int n, int[] a)
    {
        int mx = 0;
        for (int i = 0; i < n; i++)
        {
            if (a[i] > mx)
                mx = a[i];
        }
        return mx;
    }

    public int min_num(int n, int[] a)
    {
        int min = 1000000000;
        for (int i = 0; i < n; i++)
        {
            if (a[i] < min)
                min = a[i];
        }
        return min;
    }

    public int mod_num(int n, int[] a, int[] dictionary)
    {
        for (int i = 0; i < n; i++)
        {
            dictionary[a[i]]+=1;
        }
        Array.Sort(dictionary);
        return a[dictionary[1000 - 1]];
    }

    public bool palindrom(int n, int[] a)
    {
        bool flag = true;
        for (int i = 0; i < n / 2; i++)
        {
            if (a[i] != a[n-1-i])
            {
                flag = false;
                break;
            }
        }
        return flag;
    }
}

public class rand
{
    public int generator_int()
    {
        Random rnd = new Random();
        return rnd.Next(1, 1000);
    }

    public int generator_array()
    {
        Random rnd = new Random();
        int a = rnd.Next(0, 1000);
        return a;
    }
}
